{
  "name": "OpenIOTAI MQTT Export",
  "slug": "openiotai_export",
  "description": "Export Home Assistant data to OpenIOTAI via MQTT over TLS",
  "version": "20260115-1723",
  "startup": "application",
  "boot": "auto",
  "arch": ["aarch64"],


  "build": {
    "dockerfile": "Dockerfile",
    "build_from": {
      "aarch64": "ghcr.io/hassio-addons/base/aarch64:14.0.0"
    }
  },


  "options": {
    "mqtt_host": "tiilikainen.asuscomm.com",
    "mqtt_port": 8883,
    "mqtt_topic": "data/hamqtt-topic",
    "mqtt_username": "hamqtt",
    "mqtt_password": "hamqttpass",
    "heartbeat_interval_seconds": 15,
    "gateway_id": "hag-001",
    "tls_ca_url": "https://letsencrypt.org/certs/isrgrootx1.pem"
  },

  "schema": {
    "mqtt_host": "str",
    "mqtt_port": "int",
    "mqtt_topic": "str",
    "mqtt_username": "str",
    "mqtt_password": "password",
    "heartbeat_interval_seconds": "int",
    "gateway_id": "str",
    "tls_ca_url": "str"
  }
}
